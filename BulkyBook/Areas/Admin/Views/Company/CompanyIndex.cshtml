
@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary"> Companies List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary text-white" asp-action="CompanyUpsert"><i class="fas fa-plus"></i> &nbsp; Create New Category</a>
    </div>
</div>

<br />
